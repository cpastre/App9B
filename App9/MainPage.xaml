<Page
    x:Class="App9.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App9"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <local:MainPageViewModel />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="HelloMessage" HorizontalAlignment="Center" Text="{Binding Message}" IsReadOnly="False" Margin="10" 
                     VerticalAlignment="Center" Height="17" TextWrapping="Wrap" AcceptsReturn="True" />
            <Button x:Name="ClickMe" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Click Me!" 
                    Command="{Binding ClickCommand}" Margin="10" />
            <TextBox x:Name="Counter" HorizontalAlignment="Center" VerticalAlignment="Center" 
                     Text="{Binding Count}" 
                     FontSize="72" FontWeight="Bold" Margin="10" />
        </StackPanel>
    </Grid>
</Page>
